<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.scutj2ee.bookstore.dao.AddressDao">
  <resultMap id="addressMap" type="com.scutj2ee.bookstore.entity.Address">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="city" jdbcType="VARCHAR" property="city" />
    <result column="detail" jdbcType="VARCHAR" property="detail" />
    <result column="district" jdbcType="VARCHAR" property="district" />
    <result column="phone" jdbcType="INTEGER" property="phone" />
    <result column="province" jdbcType="VARCHAR" property="province" />
    <result column="receiver" jdbcType="VARCHAR" property="receiver" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
  </resultMap>

  <delete id="deleteAddress" parameterType="java.lang.Integer">
    delete from address
    where id = #{id}
  </delete>

  <insert id="insertAddress" parameterType="com.scutj2ee.bookstore.entity.Address" keyProperty="addressId" keyColumn="address_id">
    insert into address (city, detail, district, phone, province, receiver, user_id)
    values (#{city}, #{detail}, #{district}, #{phone}, #{province}, #{receiver}, #{userId})
  </insert>

  <update id="updateAddress" parameterType="com.scutj2ee.bookstore.entity.Address">
    update address
    <set>
      <if test="city != null and city != ''"> city = #{city},</if>
      <if test="detail != null and detail != ''"> detail = #{detail},</if>
      <if test="district != null and district != ''"> district = #{district},</if>
      <if test="phone != null and phone != ''"> phone = #{phone},</if>
      <if test="province != null and province != ''"> province = #{province},</if>
      <if test="receiver != null and receiver != ''"> receiver = #{receiver},</if>
      <if test="userId != null and userId != ''"> user_id = #{userId}</if>
    </set>
    where id = #{id}
  </update>

  <select id="findAddressById" parameterType="java.lang.Integer" resultMap="addressMap">
    select id, city, detail, district, phone, province, receiver, user_id
    from address
    where id = #{id}
  </select>

  <select id="selectAll" resultMap="addressMap">
    select id, city, detail, district, phone, province, receiver, user_id
    from address
  </select>

  <select id="findByIdAndUserId" resultMap="addressMap">
    select id, city, detail, district, phone, province, receiver, user_id
    from address
    where id=#{id} and user_id=#{userId}
  </select>

  <select id="findByUserId" resultMap="addressMap">
    select id, city, detail, district, phone, province, receiver, user_id
    from address
    where user_id=#{userId}
  </select>

  <select id="getAddrsssListByParams" resultMap="userMap">
    select a.*
    from address a
    where
    <if test="userId != null and userId != ''">
      a.user_id = #{userId}
    </if>
  </select>
</mapper>