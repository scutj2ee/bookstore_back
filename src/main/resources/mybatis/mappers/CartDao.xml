<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.scutj2ee.bookstore.dao.CartDao">
  <resultMap id="cartMap" type="com.scutj2ee.bookstore.entity.Cart">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="total" jdbcType="DOUBLE" property="total" />
    <result column="user_id" jdbcType="DOUBLE" property="userId" />
  </resultMap>

  <delete id="deleteCart" parameterType="java.lang.Integer">
    delete from cart
    where id = #{id}
  </delete>

  <insert id="insertCart" parameterType="com.scutj2ee.bookstore.entity.Cart">
    insert into cart (total)
    values (#{total})
  </insert>

  <update id="updateCart" parameterType="com.scutj2ee.bookstore.entity.Cart">
    update cart
    <set>
      <if test="total != null and total != ''">total = #{total}</if>
    </set>
    where id = #{id}
  </update>

  <select id="findCartById" parameterType="java.lang.Integer" resultMap="cartMap">
    select id, total, user_id
    from cart
    where id = #{id}
  </select>

  <select id="selectAll" resultMap="cartMap">
    select id, total, user_id
    from cart
  </select>

  <select id="findByUserId" parameterType="java.lang.Integer" resultMap="cartMap">
    select id
    from cart
    where user_id = #{userId}
  </select>
</mapper>