<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.RolePermissionDao">
  <resultMap id="rolePermissionMap" type="com.example.demo.entity.RolePermission">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="role_id" jdbcType="INTEGER" property="roleId" />
    <result column="permission_id" jdbcType="INTEGER" property="permissionId" />
  </resultMap>

  <delete id="deleteRolePermissionById" parameterType="java.lang.Integer">
    delete from role_permission
    where id = #{id}
  </delete>

  <insert id="insertRolePermission" parameterType="com.example.demo.entity.RolePermission">
    insert into role_permission (role_id, permission_id)
    values (#{roleId}, #{permissionId})
  </insert>

  <update id="updateRolePermission" parameterType="com.example.demo.entity.RolePermission">
    update role_permission
    <set>
      <if test="roleId != null and roleId != ''">role_id = #{roleId},</if>
      <if test="permissionId != null and permissionId != ''">permission_id = #{permissionId}</if>
    </set>
    where id = #{id}
  </update>

  <select id="findRolePermissionById" parameterType="java.lang.Integer" resultMap="rolePermissionMap">
    select id, role_id, permission_id
    from role_permission
    where id = #{id}
  </select>

  <select id="selectAll" resultMap="rolePermissionMap">
    select id, role_id, permission_id
    from role_permission
  </select>
</mapper>