<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.OrderItemDao">
  <resultMap id="orderItemMap" type="com.example.demo.entity.OrderItem">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="count" jdbcType="INTEGER" property="count" />
    <result column="order_id" jdbcType="INTEGER" property="orderId" />
    <result column="product_id" jdbcType="INTEGER" property="productId" />
    <result column="sub_integral" jdbcType="INTEGER" property="subIntegral" />
    <result column="sub_total" jdbcType="DOUBLE" property="subTotal" />
  </resultMap>

  <delete id="deleteOrderItemById" parameterType="java.lang.Integer">
    delete from order_item
    where id = #{id}
  </delete>

  <insert id="insertOrderItem" parameterType="com.example.demo.entity.OrderItem">
    insert into order_item (`count`, order_id, product_id,
      sub_integral, sub_total)
    values (#{count}, #{orderId}, #{productId},
      #{subIntegral}, #{subTotal})
  </insert>

  <update id="updateOrderItem" parameterType="com.example.demo.entity.OrderItem">
    update order_item
    <set>
      <if test="count != null and count != ''">`count` = #{count},</if>
      <if test="orderId != null and orderId != ''">order_id = #{orderId},</if>
      <if test="productId != null and productId != ''">product_id = #{productId},</if>
      <if test="subIntegral != null and subIntegral != ''">sub_integral = #{subIntegral},</if>
      <if test="subTotal != null and subTotal != ''">sub_total = #{subTotal}</if>
    </set>
    where id = #{id}
  </update>

  <select id="findOrderItemById" parameterType="java.lang.Integer" resultMap="orderItemMap">
    select id, `count`, order_id, product_id, sub_integral, sub_total
    from order_item
    where id = #{id}
  </select>

  <select id="selectAll" resultMap="orderItemMap">
    select id, `count`, order_id, product_id, sub_integral, sub_total
    from order_item
  </select>
</mapper>